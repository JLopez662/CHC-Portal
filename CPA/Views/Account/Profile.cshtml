@model DAL.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-3">
    <h2>Feel free to change your profile details</h2>

    <div class="table-responsive mt-3">
        <table id="profileTable" class="table table-striped table-bordered">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td>First Name</td>
                    <td id="FirstNameValue" data-field="FirstName">@Model.FirstName</td>
                    <td class="action-column">
                        <button class="btn edit-button-profile" onclick="editField('FirstName', '@Model.FirstName')">Edit</button>
                    </td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td id="LastNameValue" data-field="LastName">@Model.LastName</td>
                    <td class="action-column">
                        <button class="btn edit-button-profile" onclick="editField('LastName', '@Model.LastName')">Edit</button>
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td id="EmailValue" data-field="Email">@Model.Email</td>
                    <td class="action-column">
                        <button class="btn edit-button-profile" onclick="editField('Email', '@Model.Email')">Edit</button>
                    </td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td id="PhoneValue" data-field="Phone">@Model.Phone</td>
                    <td class="action-column">
                        <button class="btn edit-button-profile" onclick="editField('Phone', '@Model.Phone')">Edit</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Field</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <input type="hidden" id="fieldName" name="fieldName" />
                        <div class="mb-3" id="textField">
                            <label for="fieldValue" class="form-label">New Value</label>
                            <input type="text" class="form-control" id="fieldValue" name="fieldValue" />
                        </div>
                        <div class="mb-3" id="dropdownField" style="display:none;">
                            <label for="roleValue" class="form-label">Select Role</label>
                            <select class="form-control" id="roleValue" name="roleValue">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <button type="submit" class="btn edit-button-profile">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#profileTable').DataTable({
                "paging": false,
                "info": false,
                "searching": false,
                "ordering": false
            });

            $('#profileSearch').on('keyup', function () {
                table.search(this.value).draw();
            });

            $('#editForm').on('submit', function (e) {
                e.preventDefault();

                var fieldName = $('#fieldName').val();
                var fieldValue = fieldName === 'Role' ? $('#roleValue').val() : $('#fieldValue').val();

                $.ajax({
                    url: '@Url.Action("EditProfileField", "Account")',
                    type: 'POST',
                    data: {
                        fieldName: fieldName,
                        fieldValue: fieldValue
                    },
                    success: function (data) {
                        if (data.success) {
                            // Update the field value in the table
                            var cell = $('#' + fieldName + 'Value');
                            cell.text(fieldValue);

                            // Optional: If you want to make the change immediately visible in DataTable
                            var row = cell.closest('tr');
                            table.row(row).invalidate().draw();

                            $('#editModal').modal('hide');
                        } else {
                            alert('Error updating field: ' + data.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while updating the field.');
                    }
                });
            });
        });

        function editField(fieldName, fieldValue) {
            $('#fieldName').val(fieldName);
            if (fieldName === 'Role') {
                $('#fieldValue').removeAttr('required').hide();
                $('#dropdownField').show();
                $('#roleValue').val(fieldValue);
            } else {
                $('#dropdownField').hide();
                $('#fieldValue').attr('required', true).show();
                $('#fieldValue').val(fieldValue);
            }
            $('#editModal').modal('show');
        }
    </script>
}
