@model CPA.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="text-center mt-5">
    <h1 class="display-4">Reset Password</h1>
    <h2>Enter your new password</h2>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card mt-3">
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                    <form method="post" action="/Account/ResetPassword">
                        <div class="form-group">
                            <input type="hidden" name="Token" value="@Model.Token" />
                            <label for="newPassword">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="NewPassword" required />
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" style="margin-bottom: 15px;">
                                <span>Reset Password</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
        @if (ViewBag.Error != null)
        {
            <text>
                    toastr.error('@ViewBag.Error');
            </text>
        }
        @if (ViewBag.Success != null)
        {
            <text>
                    toastr.success('@ViewBag.Success');
            </text>
        }
                });
    </script>
}
